// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// INICIO - Models
// Enum para unidade de produtos
enum Unit {
  Kg
  G
  Un
}

enum Role {
  user
  admin
}

// Model de Categoria
model Categoria {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  nome      String
  produtos  Produto[]
}

// Model de Produto
model Produto {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  nome        String
  descricao   String
  preco       Float
  categoriaId String   @db.ObjectId
  estoque     Int
  ativo       Boolean
  unidade     Unit     // Enum
  imagemUrl   String

  categoria   Categoria @relation(fields: [categoriaId], references: [id])
}

// Model de Usu√°rio
model Usuario {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  nome  String
  email String @unique
  senha String
  role  Role   @default(user) // Enum com valor default
}

// Fim - Models
